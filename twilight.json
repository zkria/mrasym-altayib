{
    "theme_info": {
        "name": {
            "ar": "مراسيم الطيب",
            "en": "mrasym-altayib"
        },
        "version": "2.0.0",
        "repository": "https://github.com/zkria/mrasym-altayib",
        "author_email": "mrasymaltyb2@gmail.com",
        "support_url": "https://support.mrasym-altayib.com",
        "description": {
            "ar": "قالب عصري متكامل للمتاجر الإلكترونية",
            "en": "Modern integrated e-commerce theme"
        }
    },

    "features": [
        "mega-menu",
        "fonts",
        "color",
        "breadcrumb",
        "unite-cards-height",
        "component-featured-products",
        "component-fixed-banner",
        "component-fixed-products",
        "component-products-slider",
        "component-photos-slider",
        "component-parallax-background",
        "component-testimonials",
        "component-square-photos",
        "component-store-features",
        "component-youtube",
        "menu-images",
        "filters",
        "component-random-testimonials"
    ],

    "settings_groups": [
        {
            "id": "header_settings",
            "title": "إعدادات الهيدر",
            "icon": "sicon-layout-top",
            "settings": [
                {
                    "type": "boolean",
                    "id": "header_is_sticky",
                    "label": "تثبيت القائمة الرئيسية",
                    "description": "تثبيت القائمة أعلى الصفحة عند التمرير",
                    "format": "switch",
                    "default": true
                },
                {
                    "type": "boolean",
                    "id": "topnav_is_dark",
                    "label": "الوضع الداكن للشريط العلوي",
                    "format": "switch",
                    "default": false
                },
                {
                    "type": "select",
                    "id": "header_style",
                    "label": "نمط الهيدر",
                    "options": [
                        {"label": "كلاسيكي", "value": "classic"},
                        {"label": "عصري", "value": "modern"},
                        {"label": "مبسط", "value": "minimal"}
                    ],
                    "default": "modern"
                }
            ]
        },
        {
            "id": "product_settings",
            "title": "إعدادات المنتجات",
            "icon": "sicon-box-product",
            "settings": [
                {
                    "type": "boolean",
                    "id": "sticky_add_to_cart",
                    "label": "تثبيت زر الإضافة للسلة",
                    "description": "تثبيت زر الشراء أسفل الشاشة في الجوال",
                    "format": "switch",
                    "default": true
                },
                {
                    "type": "select",
                    "id": "product_layout",
                    "label": "تخطيط صفحة المنتج",
                    "options": [
                        {"label": "عادي", "value": "default"},
                        {"label": "عرض جانبي", "value": "sidebar"},
                        {"label": "عرض كامل", "value": "full"}
                    ],
                    "default": "default"
                }
            ]
        }
    ],

    "components": [
        {
            "name": "enhanced-slider",
            "title": "سلايدر متقدم",
            "icon": "sicon-image-carousel",
            "path": "home.slider",
            "fields": [
                {
                    "type": "collection",
                    "id": "slides",
                    "label": "الشرائح",
                    "min": 1,
                    "max": 10,
                    "fields": [
                        {
                            "type": "image",
                            "id": "image",
                            "label": "الصورة",
                            "required": true,
                            "settings": {
                                "width": 1920,
                                "height": 800,
                                "optimize": true,
                                "formats": ["webp", "jpg"]
                            }
                        },
                        {
                            "type": "text",
                            "id": "title",
                            "label": "العنوان",
                            "multilanguage": true,
                            "max": 100
                        },
                        {
                            "type": "rich_text",
                            "id": "description",
                            "label": "الوصف",
                            "multilanguage": true
                        },
                        {
                            "type": "link",
                            "id": "button",
                            "label": "زر التحويل",
                            "fields": [
                                {
                                    "type": "text",
                                    "id": "text",
                                    "label": "نص الزر"
                                },
                                {
                                    "type": "url",
                                    "id": "url",
                                    "label": "الرابط"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "select",
                    "id": "animation",
                    "label": "نوع الحركة",
                    "options": [
                        {"label": "تلاشي", "value": "fade"},
                        {"label": "انزلاق", "value": "slide"},
                        {"label": "تكبير", "value": "zoom"}
                    ],
                    "default": "fade"
                }
            ]
        }
    ],

    "advanced_settings": {
        "performance": {
            "lazy_loading": true,
            "image_optimization": {
                "enabled": true,
                "quality": 85,
                "formats": ["webp", "jpg"]
            },
            "minify": {
                "css": true,
                "js": true,
                "html": true
            }
        },
        "seo": {
            "meta_tags": true,
            "structured_data": true,
            "sitemap": true
        },
        "analytics": {
            "google_analytics": {
                "enabled": true,
                "enhanced_ecommerce": true
            },
            "facebook_pixel": true,
            "snapchat_pixel": true
        }
    }
}