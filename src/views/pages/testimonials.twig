{#
| Variable              | Type                         | Description         |
|-----------------------|------------------------------|---------------------|
| items                 | Comment[] *Paginator         |                     |
| items[].id            | int                          |                     |
| items[].avatar        | string                       |                     |
| items[].name          | string                       |                     |
| items[].has_order     | bool                         |                     |
| items[].created_at    | Date *Carbon                 |                     |
| items[].stars         | int                          |                     |
| items[].content       | string                       |                     |
| items[].is_pending    | bool                         | Is not approved yet |
| items[].replies       | Comment[] *Collection        |                     |
| items[].type          | string 'admin','customer'    |                     |
#}

{% extends "layouts.master" %}
{% block content %}
<div class="container px-4 py-8">
    {# الترويسة وخيارات الفرز #}
    <div class="flex flex-col md:flex-row justify-between items-center mb-8">
        <h1 class="text-2xl font-bold mb-4 md:mb-0">{{ page.title }}</h1>
        
        <div class="flex items-center bg-white rounded-lg shadow-sm p-2">
            <i class="sicon-sort-amount-down text-gray-400 mx-2"></i>
            <select id="testimonials-filter" 
                    class="form-select border-0 focus:ring-0 text-sm">
                <option value="desc">{{ trans('pages.testimonials.sort_by_date_desc') }}</option>
                <option value="asc">{{ trans('pages.testimonials.sort_by_date_asc') }}</option>
                <option value="rating-desc">{{ trans('pages.testimonials.sort_by_rating_desc') }}</option>
                <option value="rating-asc">{{ trans('pages.testimonials.sort_by_rating_asc') }}</option>
            </select>
        </div>
    </div>

    {# بطاقات التقييمات #}
    {% if items|length %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <salla-infinite-scroll next-page="{{ items.next_page }}">
                {% for comment in items %}
                    <div class="testimonial-card bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300">
                        {# رأس البطاقة - معلومات المستخدم #}
                        <div class="p-6 border-b border-gray-100">
                            <div class="flex items-center space-x-4 rtl:space-x-reverse">
                                {# صورة المستخدم #}
                                <div class="relative">
                                    <img src="{{ comment.avatar }}" 
                                         alt="{{ comment.name }}"
                                         class="w-12 h-12 rounded-full object-cover"
                                         loading="lazy">
                                    {% if comment.has_order %}
                                        <span class="absolute -bottom-1 -right-1 bg-green-500 rounded-full p-1">
                                            <i class="sicon-check text-white text-xs"></i>
                                        </span>
                                    {% endif %}
                                </div>
                                
                                {# معلومات المستخدم #}
                                <div class="flex-1">
                                    <h3 class="font-bold text-gray-900">{{ comment.name }}</h3>
                                    <time class="text-sm text-gray-500" datetime="{{ comment.created_at }}">
                                        {{ comment.created_at|date('d M Y') }}
                                    </time>
                                </div>
                            </div>

                            {# التقييم بالنجوم #}
                            <div class="flex items-center mt-4">
                                {% for i in 1..5 %}
                                    <i class="sicon-star2 text-lg {{ i <= comment.stars ? 'text-amber-400' : 'text-gray-200' }}"></i>
                                {% endfor %}
                            </div>
                        </div>

                        {# محتوى التقييم #}
                        <div class="p-6">
                            <p class="text-gray-600 leading-relaxed line-clamp-4">{{ comment.content }}</p>
                            
                            {% if comment.content|length > 200 %}
                                <button class="text-primary text-sm font-medium mt-2 hover:underline read-more">
                                    {{ trans('pages.testimonials.read_more') }}
                                </button>
                            {% endif %}
                        </div>

                        {# الردود إن وجدت #}
                        {% if comment.replies|length %}
                            <div class="px-6 pb-6">
                                <div class="bg-gray-50 rounded-lg p-4">
                                    {% for reply in comment.replies %}
                                        <div class="flex items-start space-x-3 rtl:space-x-reverse {{ not loop.first ? 'mt-4 pt-4 border-t border-gray-100' : '' }}">
                                            <img src="{{ reply.avatar }}" 
                                                 alt="{{ reply.name }}"
                                                 class="w-8 h-8 rounded-full"
                                                 loading="lazy">
                                            <div>
                                                <h4 class="font-medium text-sm">{{ reply.name }}</h4>
                                                <p class="text-sm text-gray-600 mt-1">{{ reply.content }}</p>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </salla-infinite-scroll>
        </div>
    {% else %}
        {# رسالة عند عدم وجود تقييمات #}
        <div class="flex flex-col items-center justify-center py-16 text-center">
            <i class="sicon-star-o text-6xl text-gray-300 mb-4"></i>
            <h2 class="text-xl font-medium text-gray-600 mb-4">
                {{ trans('pages.rating.no_ratings') }}
            </h2>
            <a href="{{ link('/') }}" 
               class="btn btn--outline-primary btn--rounded-full">
                {{ trans('common.elements.back_home') }}
            </a>
        </div>
    {% endif %}
</div>

{# Modal للعرض الكامل للتقييم #}
<div id="review-modal" class="modal hidden">
    <div class="modal-content">
        {# محتوى التقييم الكامل #}
    </div>
</div>
{% endblock %}

{% block styles %}
<style>
    .testimonial-card {
        transition: all 0.3s ease;
    }
    
    .testimonial-card:hover {
        transform: translateY(-2px);
    }
    
    .modal {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 50;
    }
    
    .modal-content {
        background: white;
        padding: 2rem;
        border-radius: 1rem;
        max-width: 90%;
        max-height: 90vh;
        overflow-y: auto;
    }
</style>
{% endblock %}

{% block scripts %}
<script defer src="{{ 'testimonials.js' | asset }}"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // تفعيل زر "اقرأ المزيد"
    document.querySelectorAll('.read-more').forEach(button => {
        button.addEventListener('click', function() {
            const content = this.closest('.testimonial-card').querySelector('p').textContent;
            showReviewModal(content);
        });
    });
    
    // دالة لعرض النافذة المنبثقة
    function showReviewModal(content) {
        const modal = document.getElementById('review-modal');
        modal.querySelector('.modal-content').textContent = content;
        modal.classList.remove('hidden');
    }
    
    // إغلاق النافذة المنبثقة
    document.getElementById('review-modal').addEventListener('click', function(e) {
        if (e.target === this) {
            this.classList.add('hidden');
        }
    });
});
</script>
{% endblock %}
