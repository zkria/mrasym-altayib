{% extends "layouts.master" %}

{% block content %}
    {# Helper Variables #}
    {% set product_data = {
        has_multiple_images: product.images|length > 1,
        is_on_sale: product.is_on_sale,
        has_rating: product.rating is not null,
        show_availability: product.show_availability,
        is_out_of_stock: product.is_out_of_stock,
        has_brand: product.brand.name is not empty
    } %}

    <div class="container">
        {# Navigation Breadcrumb #}
        {% include 'components/breadcrumb.twig' %}

        {# Product Display Container #}
        <div class="flex flex-col items-start md:flex-row" id="product-{{ product.id }}">
            {# Product Gallery Section #}
            {% include 'components/product/gallery.twig' with {
                product: product,
                hasMultipleImages: product_data.has_multiple_images
            } %}

            {# Product Details Section #}
            <div class="main-content md:sticky md:overflow-hidden top-24 w-full md:w-2/4 md:pb-16">
                {% hook 'product:single.description.start' %}

                {# Brand Display #}
                {% if product_data.has_brand %}
                    {% include 'components/product/brand.twig' with {brand: product.brand} %}
                {% endif %}

                {# Product Info #}
                {% include 'components/product/info.twig' with {
                    product: product,
                    isOnSale: product_data.is_on_sale,
                    hasRating: product_data.has_rating
                } %}

                {# Product Stats #}
                {% if product.sold_quantity or product.can_show_remained_quantity %}
                    {% include 'components/product/stats.twig' with {product: product} %}
                {% endif %}

                {# Additional Features #}
                {% include 'components/product/features.twig' with {
                    product: product,
                    showAvailability: product_data.show_availability
                } %}

                {# Add to Cart Form #}
                {% include 'components/product/add-to-cart.twig' with {
                    product: product,
                    isOnSale: product_data.is_on_sale,
                    isOutOfStock: product_data.is_out_of_stock
                } %}

                {% hook 'product:single.description.end' %}
            </div>
        </div>

        {# Product Offers #}
        <salla-offer class="mb-8"></salla-offer>

        {# Product Tabs Section #}
        {% include 'components/product/tabs.twig' with {
            product: product,
            hasRating: product_data.has_rating
        } %}

        {# Similar Products #}
        {% include 'components/product/similar-products.twig' with {
            product_id: product.id
        } %}
    </div>
{% endblock %}

{% block scripts %}
    <script defer src="{{ 'product.js' | asset }}"></script>
    {% if product.has_3d_image %}
        <script type="module" defer src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
    {% endif %}
{% endblock %}

