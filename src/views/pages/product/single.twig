{% extends "layouts.master" %}
{% block content %}
    <div class="container">
        <div class="product-details">
            {# القسم الأيسر - معلومات المنتج #}
            <div class="product-info">
                {# عنوان المنتج والتقييم #}
                <div class="product-header">
                    <h1 class="product-title">{{ product.name }}</h1>
                    {% if product.rating %}
                        <div class="product-rating">
                            <div class="stars">
                                {% for i in 1..5 %}
                                    <i class="sicon-star{{ i <= product.rating.stars ? ' filled' : '' }}"></i>
                                {% endfor %}
                            </div>
                            <span class="rating-count">({{ product.rating.count }})</span>
                        </div>
                    {% endif %}
                </div>

                {# السعر #}
                <div class="product-price">
                    {% if product.is_on_sale %}
                        <div class="sale-price">{{ product.sale_price | money }}</div>
                        <div class="regular-price">{{ product.regular_price | money }}</div>
                    {% else %}
                        <div class="regular-price">{{ product.price | money }}</div>
                    {% endif %}
                </div>

                {# شارات المنتج #}
                <div class="product-badges">
                    {% if product.is_on_sale %}
                        <span class="badge sale">{{ product.discount_percentage }}</span>
                    {% endif %}
                    {% if product.quantity and product.quantity < 10 %}
                        <span class="badge stock">{{ trans('pages.products.remaining_quantity', {quantity: product.quantity}) }}</span>
                    {% endif %}
                </div>

                {# نموذج إضافة للسلة #}
                <form class="add-to-cart-form">
                    {# الكمية #}
                    <div class="quantity-wrapper">
                        <label>{{ trans('pages.products.quantity') }}</label>
                        <salla-quantity-input max="{{ product.max_quantity }}"></salla-quantity-input>
                    </div>

                    {# زر الإضافة للسلة #}
                    <salla-add-to-cart-button 
                        class="add-to-cart-btn"
                        product-id="{{ product.id }}"
                        product-status="{{ product.status }}"
                        product-type="{{ product.type }}">
                    </salla-add-to-cart-button>
                </form>
            </div>

            {# القسم الأيمن - معرض الصور #}
            <div class="product-gallery">
                {# الصورة الرئيسية #}
                <div class="main-image-wrapper">
                    {% if product.promotion_title %}
                        <div class="promotion-title">{{ product.promotion_title }}</div>
                    {% endif %}

                    <img src="{{ product.images[0].url }}" 
                         alt="{{ product.name }}"
                         id="main-product-image"
                         class="main-image">

                    {# أزرار التحكم #}
                    <div class="gallery-controls">
                        <button class="control-btn prev">
                            <i class="sicon-chevron-right"></i>
                        </button>
                        <button class="control-btn next">
                            <i class="sicon-chevron-left"></i>
                        </button>
                        <button class="control-btn zoom">
                            <i class="sicon-zoom-in"></i>
                        </button>
                    </div>
                </div>

                {# المصغرات #}
                <div class="thumbnails-wrapper">
                    <div class="thumbnails">
                        {% for image in product.images %}
                            <div class="thumbnail {% if loop.first %}active{% endif %}" 
                                 data-index="{{ loop.index0 }}">
                                <img src="{{ image.url }}" 
                                     alt="{{ product.name }}"
                                     loading="{{ loop.first ? 'eager' : 'lazy' }}">
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script defer src="{{ 'product.js' | asset }}"></script>
    {% if product.has_3d_image %}
        <script type="module" defer src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
    {% endif %}
{% endblock %}
