{#
| Variable     | Type                  | Description |
|--------------|-----------------------|-------------|
| page         | Page                  |             |
| page.title   | string                |             |
| page.content | string                |             |
| page.url     | string                |             |
| page.slug    | string                |             |
#}
{% extends "layouts.master" %}
{% block content %}
    <div class="container px-4 py-8">
        {# شريط التنقل #}
        <nav class="breadcrumbs mb-8">
            <salla-breadcrumb></salla-breadcrumb>
        </nav>

        {# المحتوى الرئيسي #}
        <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-sm">
            {# رأس الصفحة #}
            <header class="p-6 border-b border-gray-100">
                <h1 class="text-2xl font-bold text-gray-900">{{ page.title }}</h1>
            </header>

            {# محتوى الصفحة #}
            <div class="p-6 prose prose-lg max-w-none">
                {{ page.content|raw }}
            </div>

            {# التعليقات #}
            <div class="border-t border-gray-100">
                <div class="p-6">
                    <h2 class="text-xl font-semibold mb-4">التعليقات</h2>
                    <salla-comments 
                        item-id="{{page.id}}" 
                        type="page">
                    </salla-comments>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
