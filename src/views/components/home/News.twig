{# 
| المتغيرات المتاحة:
| component.title        - عنوان الشريط
| component.news_items   - مصفوفة الأخبار
| component.style       - نمط العرض (horizontal/vertical/fade)
| component.auto_play   - تشغيل تلقائي
| component.speed       - سرعة العرض
| component.show_time   - إظهار الوقت
#}

<section class="pro-news-ticker s-block" 
         data-speed="{{ component.speed|default(3) }}"
         data-autoplay="{{ component.auto_play|default(true) }}">
    <div class="ticker-wrapper">
        <div class="news-marquee">
            <div class="news-track">
                {% for item in component.news_items %}
                    <div class="news-item">
                        <div class="news-content">
                            <span class="news-text">{{ item.text }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
            {# تكرار الأخبار للحركة المستمرة #}
            <div class="news-track" aria-hidden="true">
                {% for item in component.news_items %}
                    <div class="news-item">
                        <div class="news-content">
                            <span class="news-text">{{ item.text }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
